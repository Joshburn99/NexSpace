# ===========================
# NEXSPACE PLATFORM ENVIRONMENT VARIABLES
# ===========================

# ===========================
# CORE APPLICATION (Required)
# ===========================
NODE_ENV=development
PORT=5000

# Database - PostgreSQL connection string (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/nexspace

# Session Security - Required for production, generates secure session cookies
SESSION_SECRET=your-super-secret-session-key-change-in-production-min-32-chars

# Frontend Client URL - Used for CORS and redirects
CLIENT_URL=http://localhost:5000
VITE_API_URL=http://localhost:5000

# ===========================
# AUTHENTICATION (Optional)
# ===========================
# JWT Authentication - Optional, used for API token authentication
JWT_SECRET=your-jwt-secret-key-min-32-chars

# Calendar Token Secret - For calendar sync token encryption
CALENDAR_TOKEN_SECRET=nexspace-calendar-sync-secret

# ===========================
# EMAIL SERVICES (Optional)
# ===========================
# SendGrid - For sending notification emails
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=notifications@nexspace.com
FROM_EMAIL=noreply@nexspace.com

# ===========================
# GOOGLE SERVICES (Optional)
# ===========================
# Google Calendar Sync - OAuth2 credentials from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/calendar-sync/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# ===========================
# AI SERVICES (Optional)
# ===========================
# OpenAI - For recommendation engine and AI features
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================
# HEALTHCARE DATA APIs (Optional)
# ===========================
# CMS (Centers for Medicare & Medicaid Services) - For facility data validation
CMS_API_KEY=your-cms-api-key

# NPI (National Provider Identifier) - For healthcare provider verification
NPI_API_KEY=your-npi-api-key

# ===========================
# COMMUNICATION SERVICES (Optional)
# ===========================
# Twilio - For SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================
# SECURITY & NETWORKING
# ===========================
# CORS Origin - Allowed origins for cross-origin requests
CORS_ORIGIN=http://localhost:5000
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Rate Limiting - Requests per window (default: 100 requests per 15 minutes)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# WEBSOCKET CONFIGURATION
# ===========================
# WebSocket Port - For real-time features
WS_PORT=9005

# ===========================
# FEATURE FLAGS
# ===========================
# Enable/disable features
ENABLE_WEBSOCKET=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_CALENDAR_SYNC=false
ENABLE_AI=false

# ===========================
# DATABASE CONFIGURATION
# ===========================
# Database connection pool settings
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
# Upload directory and limits
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx

# ===========================
# EMAIL CONFIGURATION
# ===========================
# Email provider and addresses
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@nexspace.com
SUPPORT_EMAIL=support@nexspace.com

# ===========================
# DEVELOPMENT & DEBUGGING
# ===========================
# Debug Namespaces - Controls debug output
DEBUG=nexspace:*

# Log Level - Controls logging verbosity (error, warn, info, debug)
LOG_LEVEL=info
LOG_FORMAT=json

# Disable pretty printing in production
LOG_PRETTY=true

# Application URL - For external links and callbacks
APP_URL=http://localhost:5000