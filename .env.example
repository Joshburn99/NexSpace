# Database
DATABASE_URL=your_database_url_here

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# External API Configuration
# CMS (Centers for Medicare & Medicaid Services) API
CMS_API_URL=https://data.cms.gov
CMS_API_KEY=your_cms_api_key_here
CMS_API_TIMEOUT=15000
CMS_API_RETRIES=3

# NPI (National Provider Identifier) Registry API
NPI_API_URL=https://npiregistry.cms.hhs.gov
NPI_API_TIMEOUT=10000
NPI_API_RETRIES=2

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=notifications@yourdomain.com

# Google Calendar Integration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/calendar-sync/google/callback

# Calendar Features
CALENDAR_TOKEN_SECRET=your_calendar_token_secret_here

# Application Settings
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000
CORS_ORIGIN=http://localhost:5000

# Frontend API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=/api
VITE_WS_URL=ws://localhost:5000/ws
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info